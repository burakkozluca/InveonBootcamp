@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "List Roles";
}

<h2>List Roles</h2>

<table class="table">
    <thead>
    <tr>
        <th>Role Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a asp-action="UpdateRole" asp-route-roleName="@role.Id" class="btn btn-warning">Edit</a>
                <a asp-action="DeleteRole" asp-route-roleName="@role.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>