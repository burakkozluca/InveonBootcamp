@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}

<h2>Delete Role</h2>

<h3>Are you sure you want to delete this role?</h3>
<div>
    <h4>@Model.Name</h4>
    <form asp-action="DeleteRole">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ListRoles" class="btn btn-secondary">Cancel</a>
    </form>
</div>