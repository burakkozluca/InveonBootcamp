@model LibraryProject.Repositories.Books.Book

<h1>Book Details</h1>

<table class="table">
    <tr>
        <th>Title</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Author</th>
        <td>@Model.Author</td>
    </tr>
    <tr>
        <th>Publication Year</th>
        <td>@Model.PublicationYear</td>
    </tr>
    <tr>
        <th>ISBN</th>
        <td>@Model.Isbn</td>
    </tr>
    <tr>
        <th>Genre</th>
        <td>@Model.Genre</td>
    </tr>
    <tr>
        <th>Publisher</th>
        <td>@Model.Publisher</td>
    </tr>
    <tr>
        <th>Page Count</th>
        <td>@Model.PageCount</td>
    </tr>
    <tr>
        <th>Language</th>
        <td>@Model.Language</td>
    </tr>
    <tr>
        <th>Summary</th>
        <td>@Model.Summary</td>
    </tr>
    <tr>
        <th>Available Copies</th>
        <td>@Model.AvailableCopies</td>
    </tr>
</table>

<a asp-action="Book" class="btn btn-primary">Back to List</a>